---
import Button from "./Button.astro";
---

<header class="flex items-center justify-between px-4 py-2 bg-base-100">
<!-- Logo -->
<a href="/" class="flex-1"><img src="/lost-logo.svg" alt="Lost Logo" class="h-30 w-30 inline-block" /></a>
<!-- Navigation -->
    <nav class="flex-none">
        <ul class="menu menu-horizontal px-1 flex items-center gap-2">
            <!-- Buy Ticket Button -->
            <li class="p-0"><Button primary={true}>Buy Ticket</Button></li>
        <li class="p-0">
            <div class="relative">
                <input type="checkbox" id="user-menu-toggle" class="hidden peer" />
                <label for="user-menu-toggle" class="btn btn-ghost btn-circle m-1 cursor-pointer flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-base-content" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </label>
            <!-- Fullscreen Dropdown -->
                <div class="fixed inset-0 w-screen h-screen bg-base-100 z-40 hidden peer-checked:grid grid-cols-1 md:grid-cols-2">
                <!-- Image Column -->
                <div class="hidden md:block bg-cover bg-center" style="background-image: url('/placeholder.png');"></div>
            <!-- Navigation Column -->
                    <div class="flex flex-col justify-center items-start p-10 space-y-4">
                        <a href="/profile" class="text-lg font-semibold hover:underline">Profile</a>
                        <a href="/settings" class="text-lg font-semibold hover:underline">Settings</a>
                        <a href="/logout" class="text-lg font-semibold hover:underline">Logout</a>
                    </div>
                </div>
            </div>
        </li>
    </ul>
    </nav>
</header>