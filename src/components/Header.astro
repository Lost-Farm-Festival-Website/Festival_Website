---
import Button from "./Button.astro";
import Heading from "./typography/Heading.astro"
import Bodytext from "./typography/Bodytext.astro"
---

<header class="flex items-center justify-between px-4 py-2 bg-primary-900">
<!-- Logo -->
  <a href="/" class="flex-1">
    <img src="/lost-logo.svg" alt="Lost Logo" class="h-30 w-30 inline-block" />
  </a>

<!-- Navigation -->
  <nav class="flex-none ">
    <ul class="menu menu-horizontal flex items-center gap-4">
<!-- Buy Ticket Button -->
      <li>
        <Button variant="filled-primary" size="mobile-regular md:desktop-regular">
          Buy Ticket
        </Button>
      </li>
<!-- Burgermenu -->
    <li class="p-4">
     <div class="relative">
<!-- Checkbox Toggle -->
        <input type="checkbox" id="user-menu-toggle" class="hidden peer" />
<!-- Burger / Cross Icon -->
    <label for="user-menu-toggle" class="z-50 cursor-pointer flex items-center justify-center relative ">
<!-- Burgermenu -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-6 w-6 stroke-base-content peer-checked:hidden stroke-primary-50"
                 fill="none"  stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <!-- Kryds -->
        <svg xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 hidden peer-checked:block stroke-primary-50"
                fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </label>
<!-- Fullscreen Menu (styret af peer) -->
          <div class="fixed inset-0 w-screen h-screen bg-primary-900 z-40 hidden peer-checked:grid grid-cols-1 md:grid-cols-2">
            <!-- Image Column -->
            <div class="hidden md:block bg-cover bg-center" style="background-image: url('/public/Navigation_roma-kaiuk-z51SGO5m5ec-unsplash.webp');"></div>

            <!-- Navigation Column -->
            <div class="flex flex-col justify-center items-start p-10 space-y-4 bg-primary-900 text-primary-50">
                <a href="/program" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Explore the Program</Heading>
                </a>
                <a href="/about" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Read About the Festival</Heading>
                </a>
                <a href="/theme" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Lost Farm Festival Theme</Heading>
                </a>
                <a href="/partners" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Funding & Partners</Heading>
                </a>
                <a href="/practical" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Practical Information</Heading>
                </a>
                <a href="/contact" class="hover:underline hover:text-primary-500">
                    <Heading level={3} class="font-semibold text-lg">Contact</Heading>
                </a>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </nav>
</header>
