---
import Heading from "../components/typography/Heading.astro";
import Button from "../components/Button.astro";
import Badge from "../components/Badge.astro";
const { image, title, time, stage, genre, badgeVariant, badgeText} = Astro.props;
---

<div class="relative w-108 h-122 overflow-hidden">
  <img src={image} alt={title} class="w-full h-full object-cover" />
  
  <div class="absolute top-2 left-3 z-30">
    <Badge variant={badgeVariant} size="desktop-regular">{badgeText}</Badge>
  </div>

  <!-- Blur overlay i bunden -->
  <div class="absolute bottom-0 w-full h-full backdrop-blur-md" style="mask-image: linear-gradient(to top, black 35%, transparent 100%);"></div>
  <!-- Tekst ovenpÃ¥ blur -->
  <div class="absolute bottom-0 p-4 text-white z-10">
    <div class="pb-[var(--spaceing-2-5)]">
        <Heading htmlheading="h4" size="large">{title}</Heading>
    </div>
    <div class="flex flex-col gap-2 pb-[var(--spaceing-2-5)]">
        <div class="flex items-center gap-5">
            <img src="/tid-icon.svg" alt="tid" class="w-6 h-6" />
            <Heading htmlheading="h8" size="xtra-xtra-small">{time}</Heading>
        </div>
        <div class="flex items-center gap-5">
            <img src="/sted-icon.svg" alt="sted" class="w-6 h-6" />
            <Heading htmlheading="h8" size="xtra-xtra-small">{stage}</Heading>
        </div>
        <div class="flex items-center gap-5">
            <img src="/genre-icon.svg" alt="genre" class="w-6 h-6" />
            <Heading htmlheading="h8" size="xtra-xtra-small">{genre}</Heading>
        </div>
    </div>
    <p class="pb-[var(--spaceing-2-5)]"><Button variant="filled-primary" size="desktop-regular">Read more</Button></p>
  </div>
</div>
