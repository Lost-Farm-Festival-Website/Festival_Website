---
import tailwindcss from "@tailwindcss/vite"
import Heading from "./typography/Heading.astro"
import Bodytext from "./typography/Bodytext.astro"
import Button from "./Button.astro"
---
<!-- Text-2cols -->
  <!-- Overskrift -->
<Heading size="medium" stylingclasses="md:text-5xl lg:text-5xl text-primary-50 md:mb-20 mb-10">
        <slot name="header" />
</Heading>

<!-- 2cols -->
 <section title="Text-2cols">
    <div class="flex flex-col md:flex-row md:justify-between md:gap-8">
        <!-- Left bodytext + CTA -->
        <div class="md:w-1/2 mb-10">
            <Bodytext size="small-regular" stylingclasses="md:text-2xl lg:text-2xl text-primary-50">
                <slot name="bodytext" />
            </Bodytext>

            <!-- CTAer -->
            <div title="2cols-knapper" class="mt-5 md:mt-10 flex flex-col gap-4 md:flex-row md:gap-4">
                <Button 
                    variant="filled-primary" 
                    size="mobile-regular md:desktop-regular"
                >
                    <slot name="filled-primary" />
                </Button>
                <Button 
                    variant="outline-primary" 
                    size="mobile-regular md:desktop-regular"
                >
                    <slot name="outline-primary" />
                </Button>
            </div>
        </div>

        <!-- right Image -->
        <div class="md:w-1/2">
            <slot name="image" /> 
        </div>
    </div>
</section>


