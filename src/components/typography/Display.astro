---
// Henter parametrene fra Astro.props
const { htmldisplay="h2", size="medium", stylingclasses=""} = Astro.props; 
const Htmldisplay = htmldisplay;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
"display-web": "text-8xl font-bold",
"display-mobile": "text-4xl font-bold",
};
---
<Htmldisplay class:list={[sizeClasses[size], "font-loos text-primary-500", stylingclasses]}><slot /></Htmldisplay>